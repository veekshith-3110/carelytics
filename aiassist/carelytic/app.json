{
  "expo": {
    "name": "carelytic",
    "slug": "carelytic",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "carelytic",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow Carelytics to use your location to find nearby hospitals.",
        "NSLocationAlwaysUsageDescription": "Allow Carelytics to use your location to find nearby hospitals.",
        "NSSpeechRecognitionUsageDescription": "Allow Carelytics to use speech recognition for voice input.",
        "NSCameraUsageDescription": "Allow Carelytics to access camera for health record uploads.",
        "NSMicrophoneUsageDescription": "Allow Carelytics to use microphone for voice input."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO",
        "CAMERA"
      ],
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#0a7ea4",
          "sounds": []
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Carelytics to use your location to find nearby hospitals."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
